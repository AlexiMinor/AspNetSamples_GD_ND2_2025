@model EditArticleModel
@{
    ViewData["Title"] = "Add article";
}

<h2>Edit Article</h2>

@using (Html.BeginForm("EditProcessing", "Article", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)
    <div>
        @Html.LabelFor(model => model.Title) @* strict type html helpers *@
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div>
        @Html.LabelFor(model => model.Description) @* strict type html helpers *@
        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div>
        @Html.LabelFor(model => model.Text) @* strict type html helpers *@
        @Html.TextAreaFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div>
        @Html.LabelFor(model => model.SourceId) @* strict type html helpers *@
        @Html.DropDownListFor(model => model.SourceId, 
            new SelectList(Model.Sources.Select(dto 
                    => new SelectListItem(dto.Name, dto.Id.ToString())), 
            "Value", "Text"), new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div>
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
}